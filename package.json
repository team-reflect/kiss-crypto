{
  "name": "kiss-crypto",
  "type": "module",
  "version": "0.3.3",
  "description": "",
  "author": "",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./hash-password": {
      "types": "./dist/hash-password.d.ts",
      "import": "./dist/hash-password.js",
      "default": "./dist/hash-password.js"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "hash-password": [
        "./dist/hash-password.d.ts"
      ]
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "TZ=UTC vitest",
    "build": "mkdir -p dist && rm -rf dist && tsc --build tsconfig.build.json",
    "prepack": "yarn build",
    "fix": "eslint . --fix && prettier --write .",
    "lint": "eslint . && tsc --noEmit",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "size-limit": [
    {
      "path": "dist/*.js",
      "limit": "950 kB"
    }
  ],
  "dependencies": {
    "@noble/ciphers": "0.5.3",
    "@noble/hashes": "1.4.0",
    "@scure/base": "1.1.7",
    "hash-wasm": "4.11.0"
  },
  "devDependencies": {
    "@ocavue/eslint-config": "^1.11.2",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@types/node": "^18.11.18",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "size-limit": "^11.1.4",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  }
}
